<!--
  Grid Edition version of the cache config which includes Federation.
-->
<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:spring="class://com.oracle.coherence.spring.namespace.NamespaceHandler"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd
                                  class://com.oracle.coherence.spring.namespace.NamespaceHandler coherence-spring-config.xsd">

    <defaults>
     <serializer>
          <instance>
             <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
             <init-params>
                <init-param>
                   <param-type>String</param-type>
                   <param-value>pof-config.xml</param-value>
                </init-param>
             </init-params>
          </instance>
       </serializer>
    </defaults>

    <!-- Interceptor to bootstrap the demo application -->
    <interceptors>
        <interceptor>
            <instance>
                <class-name>com.oracle.coherence.demo.application.BootstrapInterceptor</class-name>
            </instance>
        </interceptor>
    </interceptors>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>Trade</cache-name>
            <scheme-name>federated-scheme</scheme-name>
            <key-type>java.lang.String</key-type>
            <value-type>com.oracle.coherence.demo.model.Trade</value-type>
        </cache-mapping>
        <cache-mapping>
            <cache-name>Price</cache-name>
            <scheme-name>federated-scheme</scheme-name>
            <key-type>java.lang.String</key-type>
            <value-type>com.oracle.coherence.demo.model.Price</value-type>
        </cache-mapping>

        <cache-mapping>
            <cache-name>Cities</cache-name>
            <scheme-name>cities-near-cache</scheme-name>
            <key-type>java.lang.String</key-type>
            <value-type>java.lang.String</value-type>
            <init-params>
                <init-param>
                    <param-name>cacheloader-bean-name</param-name>
                    <param-value>cityCacheLoader</param-value>
                </init-param>
            </init-params>
        </cache-mapping>

    </caching-scheme-mapping>

    <caching-schemes>

        <near-scheme>
            <scheme-name>cities-near-cache</scheme-name>
            <front-scheme>
                <local-scheme/>
            </front-scheme>
            <back-scheme>
                <federated-scheme>
                    <scheme-ref>federated-cities-affinitive-dist-cache</scheme-ref>
                </federated-scheme>
            </back-scheme>
            <invalidation-strategy>all</invalidation-strategy>
        </near-scheme>

        <federated-scheme>
            <scheme-name>federated-cities-affinitive-dist-cache</scheme-name>
            <scheme-ref>federated-base-affinitive-dist-cache</scheme-ref>
            <service-name>CitiesDistributed</service-name>
            <autostart>true</autostart>
            <topologies>
                <topology>
                    <name>Active</name>
                </topology>
            </topologies>
        </federated-scheme>

        <federated-scheme>
            <scheme-name>federated-base-affinitive-dist-cache</scheme-name>
            <scheme-ref>federated-based-dist-cache</scheme-ref>
            <key-associator>
                <class-name>java.lang.String</class-name>
            </key-associator>
            <key-partitioning>
                <class-name>com.tangosol.net.partition.DefaultKeyPartitioningStrategy</class-name>
            </key-partitioning>
            <partition-assignment-strategy>
                <instance>
                    <class-name>com.tangosol.net.partition.SimpleAssignmentStrategy</class-name>
                </instance>
            </partition-assignment-strategy>
        </federated-scheme>

        <federated-scheme>
            <scheme-name>federated-based-dist-cache</scheme-name>
            <backing-map-scheme>
                <read-write-backing-map-scheme>
                    <internal-cache-scheme>
                        <local-scheme/>
                    </internal-cache-scheme>
                    <cachestore-scheme>
                        <!-- uncomment this line -->
                        <!--federated-loading>true</federated-loading--> <!-- when this is enabled the cache-loader defined in the <spring:bean> is not getting called as if the next line is skipped -->
                        <spring:bean>{cacheloader-bean-name}</spring:bean>
                    </cachestore-scheme>
                </read-write-backing-map-scheme>
            </backing-map-scheme>
        </federated-scheme>

        <federated-scheme>
            <scheme-name>federated-scheme</scheme-name>
            <backing-map-scheme>
                <read-write-backing-map-scheme>
                    <internal-cache-scheme>
                        <local-scheme/>
                    </internal-cache-scheme>
                    <write-max-batch-size>5000</write-max-batch-size>
                    <!-- Define the cache scheme. -->
                    <cachestore-scheme>
                        <class-scheme>
                            <class-name>
                                com.oracle.coherence.demo.cachestore.JpaCacheStore
                            </class-name>
                            <init-params>
                                <!-- This param is the entity name. -->
                                <init-param>
                                    <param-type>java.lang.String</param-type>
                                    <param-value>{cache-name}</param-value>
                                </init-param>

                                <!-- This param is the fully qualified entity class. -->
                                <init-param>
                                    <param-type>java.lang.String</param-type>
                                    <param-value>com.oracle.coherence.demo.model.{cache-name}</param-value>
                                </init-param>

                                <!-- This param should match the value of the -->
                                <!-- persistence unit name in persistence.xml. -->
                                <init-param>
                                    <param-type>java.lang.String</param-type>
                                    <param-value>demo</param-value>
                                </init-param>
                            </init-params>
                        </class-scheme>
                    </cachestore-scheme>
                    <write-delay>2s</write-delay>
                </read-write-backing-map-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
            <address-provider>
                <local-address>
                    <address system-property="coherence.extend.address"></address>
                    <port system-property="coherence.federation.port">40000</port>
                </local-address>
            </address-provider>
            <topologies>
                <topology>
                    <name>Active</name>
                </topology>
            </topologies>
        </federated-scheme>

        <invocation-scheme>
            <service-name>InvocationService</service-name>
            <autostart>true</autostart>
        </invocation-scheme>

        <proxy-scheme>
            <service-name>ExtendHttpProxyService</service-name>
            <acceptor-config>
                <http-acceptor>
                    <class-name>com.tangosol.coherence.http.netty.NettyHttpServer</class-name>
                    <local-address>
                        <address system-property="http.hostname">127.0.0.1</address>
                        <port system-property="http.port">8080</port>
                    </local-address>

                    <!-- the coherence cache resources -->
                    <resource-config>
                        <context-path>/cache</context-path>
                        <instance>
                            <class-name>com.tangosol.coherence.rest.server.DefaultResourceConfig</class-name>
                        </instance>
                    </resource-config>

                    <!-- the application service resources -->
                    <resource-config>
                        <context-path>/service</context-path>
                        <instance>
                            <class-name>com.oracle.coherence.demo.application.ServiceResourceConfig</class-name>
                        </instance>
                    </resource-config>

                    <!-- the application content resources -->
                    <!-- eg: .html, .css, .js & .jpg files -->
                    <resource-config>
                        <context-path>/application</context-path>
                        <instance>
                            <class-name>com.oracle.coherence.demo.application.ApplicationResourceConfig</class-name>
                        </instance>
                    </resource-config>

                    <!-- Management over REST -->
                    <resource-config>
                        <instance>
                            <class-name>com.oracle.coherence.demo.application.ManagementResourceConfig</class-name>
                        </instance>
                    </resource-config>
                </http-acceptor>
            </acceptor-config>
            <autostart system-property="with.http">true</autostart>
        </proxy-scheme>
    </caching-schemes>
</cache-config>

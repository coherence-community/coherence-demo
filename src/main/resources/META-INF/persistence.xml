<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="demo" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.oracle.coherence.demo.model.Price</class>
    <class>com.oracle.coherence.demo.model.Trade</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="io.opentelemetry.instrumentation.jdbc.OpenTelemetryDriver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:otel:derby:memory:demo;create=true;traceWithActiveSpanOnly=true"/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <property name="eclipselink.weaving" value="false"/>
      <property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
      <property name="eclipselink.jdbc.batch-writing.size" value="10000"/>
    </properties>
  </persistence-unit>
</persistence>